package ArraysString;

import java.util.Scanner;

public class Nesting_Array {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int arr[] = new int[n];
		for(int i=0;i<n;i++)
		arr[i] = s.nextInt();
		boolean visited[] = new boolean[n];
		for(int i=0;i<n;i++)
			visited[i] = true;
		int max=0;
		for(int i=0;i<n;i++)
		{
			int length=1;
			int j =arr[i];
			while(j<n&&!visited[j])
			{
				 visited[j] = false;
				 System.out.println(j+"///"+(arr[j])+"<<<<<<<"+visited[j]);
				 j = arr[j]-1;
				System.out.println(visited[j]);

				 
			}
			System.out.println(":::");
		}
		
	}
}
